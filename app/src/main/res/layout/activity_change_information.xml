<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/beijing"
    android:id="@+id/ChangeInfor_R"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeInformation">

    <fragment
        android:id="@+id/change_information"
        android:name="com.example.sif.Lei.ShowActivityBar.FragmentActivityBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/biaotilan_gaodu"/>

    <LinearLayout
        android:id="@+id/change_llt"
        android:layout_marginTop="40dp"
        android:background="@drawable/change_information"
        android:layout_below="@id/change_information"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <EditText
            android:id="@+id/change_Text"
            android:paddingLeft="15dp"
            android:background="@null"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/change_tv"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@id/change_llt"
        android:layout_below="@id/change_llt"
        android:text="/15"
        android:textSize="@dimen/biaotilan_xiaozi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/change_number"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/change_tv"
        android:layout_below="@id/change_llt"
        android:textSize="@dimen/biaotilan_xiaozi"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>