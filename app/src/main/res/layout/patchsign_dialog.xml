<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/ll1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/t1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="本次补签会消耗"
                    android:textSize="@dimen/biaotilan_dazi"
                    android:textColor="@color/ziti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/t1"
                    android:background="@drawable/glod_coin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/biaotilan_dazi"
                    android:textColor="@color/yanghong"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="-50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/cancel"
                    android:textSize="@dimen/biaotilan_chaoxiao"
                    android:text="取消"
                    android:textColor="@color/ziti"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/daohang"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"/>

            <Button
                    android:id="@+id/determine"
                    android:textColor="@color/beijing"
                    android:text="确定"
                    android:textSize="@dimen/biaotilan_chaoxiao"
                    style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/denglubackground2"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>