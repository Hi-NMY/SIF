<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:cp="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/gv_send_Rzong"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <ImageView
            android:id="@+id/gv_send_close"
            android:layout_marginTop="13dp"
            android:background="@drawable/close_black"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <Button
            android:id="@+id/send_voice"
            android:layout_marginTop="13dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/beijing"
            android:text="发布"
            android:textSize="@dimen/biaotilan_chaoxiao"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/toastgackground"
            android:layout_width="50dp"
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/text1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/gv_send_close"
            android:textColor="@color/lightgray"
            android:text="选择标签"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/label1"
                android:background="@drawable/blue_label"
                style="?android:attr/borderlessButtonStyle"
                android:text="随心说"
                android:textSize="11sp"
                android:alpha="0.4"
                android:layout_margin="5dp"
                android:textColor="@color/beijing"
                android:layout_width="53dp"
                android:layout_height="20dp"/>

            <Button
                android:id="@+id/label2"
                android:background="@drawable/yellow_label"
                style="?android:attr/borderlessButtonStyle"
                android:text="聆心声"
                android:alpha="0.4"
                android:textSize="11sp"
                android:layout_margin="5dp"
                android:textColor="@color/beijing"
                android:layout_width="53dp"
                android:layout_height="20dp"/>

            <Button
                android:id="@+id/label3"
                android:background="@drawable/purple_label"
                style="?android:attr/borderlessButtonStyle"
                android:text="趣   说"
                android:alpha="0.4"
                android:textSize="11sp"
                android:layout_margin="5dp"
                android:textColor="@color/beijing"
                android:layout_width="53dp"
                android:layout_height="20dp"/>

            <Button
                android:id="@+id/label4"
                android:background="@drawable/red_label"
                style="?android:attr/borderlessButtonStyle"
                android:text="美   音"
                android:alpha="0.4"
                android:textSize="11sp"
                android:layout_margin="5dp"
                android:textColor="@color/beijing"
                android:layout_width="53dp"
                android:layout_height="20dp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/circle_r1"
            android:layout_marginBottom="35dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/circle_r"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.example.sif.Lei.NiceImageView.CircleImageView
                    android:id="@+id/circle_b"
                    android:layout_centerInParent="true"
                    android:alpha="0.2"
                    android:src="@color/bilan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <com.example.sif.Lei.NiceImageView.CircleImageView
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:layout_centerInParent="true"
                    android:src="@color/beijing" />

                <com.example.sif.Lei.NiceImageView.CircleProgressBar
                    android:id="@+id/circleProgressbar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    cp:radius="30dp"
                    cp:strokeWidth="4dp"
                    cp:ringColor="#70f3ff" />


                <com.example.sif.Lei.NiceImageView.CircleImageView
                    android:id="@+id/circle_a"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@color/bilan" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/gv_go"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:background="@drawable/gv_go"
                    android:layout_width="38dp"
                    android:layout_height="38dp"/>

                <ImageView
                    android:id="@+id/gv_stop"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:background="@drawable/gv_go1"
                    android:layout_width="38dp"
                    android:layout_height="38dp"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/gv_delete"
                android:visibility="gone"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/circle_r"
                android:background="@drawable/gv_delete"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/time_llt"
            android:visibility="invisible"
            android:layout_marginTop="-29dp"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/circle_r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gv_time_math"
                android:textColor="@color/ziti"
                android:textSize="@dimen/biaotilan_title"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/gv_time"
                android:layout_marginLeft="1dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/ziti"
                android:textSize="@dimen/biaotilan_title"
                android:text="S"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        <TextView
            android:id="@+id/click_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-30dp"
            android:layout_below="@+id/circle_r1"
            android:text="点击录音"
            android:textColor="@color/gray"
            android:textSize="@dimen/biaotilan_xiaozi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>