<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ib_RZong"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterestingBlock">

    <RelativeLayout
        android:id="@+id/ib_R"
        android:layout_width="match_parent"
        android:layout_height="@dimen/biaotilan_gaodu">

        <ImageView
            android:id="@+id/ib_FanHui"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:background="@drawable/zuo_black"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/ib_indicator"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:alpha="0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/lightgray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ib_viewpager"
        android:layout_below="@+id/ib_R"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>