<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <com.lihang.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:hl_cornerRadius="5dp"
            app:hl_shadowColor="@color/black"
            app:hl_shadowBackColor="@color/beijing"
            app:hl_shadowLimit="5dp">

            <RelativeLayout
                android:id="@+id/popuowindow_R"
                android:background="@drawable/kuang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/popuowindow_text1"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/biaotilan_chaoxiao"
                        android:textColor="@color/ziti"
                        android:text="删除"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/popuowindow_text2"
                        android:visibility="gone"
                        android:layout_below="@id/popuowindow_text1"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/biaotilan_chaoxiao"
                        android:textColor="@color/ziti"
                        android:text="回复"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>

        </com.lihang.ShadowLayout>
</RelativeLayout>