<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="30dp"
            android:textColor="@color/ziti"
            android:layout_centerHorizontal="true"
            android:text="美一声使用规则"
            android:textSize="@dimen/biaotilan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t1"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/title"
            android:textSize="@dimen/biaotilan_xiaozi"
            android:text="1.美一声 是每位 Sifer 用来互相交流的 功能"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t2"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/t1"
            android:textSize="@dimen/biaotilan_xiaozi"
            android:text="2.禁止涉黄、谩骂、广告等不良行为，如遇请进行举报"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/t3"
            android:layout_marginTop="30dp"
            android:lineSpacingMultiplier="1.3"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/t2"
            android:textSize="@dimen/biaotilan_xiaozi"
            android:text="3.语音发布后不能删除，请各位展现出最美好的声音吧！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/tips_button"
            android:background="@drawable/ib_detailed_button"
            android:textColor="@color/beijing"
            android:text="同 意"
            android:textSize="@dimen/biaotilan_title"
            android:textStyle="bold"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="30dp"
            android:layout_below="@id/t3"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="45dp"/>

        <ImageView
            android:id="@+id/close_tips"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tips_button"
            android:background="@drawable/closecircle"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </RelativeLayout>

</RelativeLayout>