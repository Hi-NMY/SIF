<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/account_r"
    tools:context=".SettingAccountSafe">

    <fragment
        android:id="@+id/setting_account_bar"
        android:name="com.example.sif.Lei.ShowActivityBar.FragmentActivityBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/biaotilan_gaodu"/>

    <LinearLayout
        android:background="@color/qianbai"
        android:layout_below="@id/setting_account_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/new_password"
            android:background="@color/beijing"
            android:paddingLeft="@dimen/guangchangimage_left"
            android:paddingRight="@dimen/guangchangimage_left"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_marginLeft="10dp"
                android:text="修改密码"
                android:textSize="@dimen/biaotilan_xiaozi"
                android:textColor="@color/ziti"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/img"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right_grey"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </RelativeLayout>

        <View
            android:layout_marginLeft="@dimen/guangchangimage_left"
            android:layout_marginRight="@dimen/guangchangimage_left"
            android:background="@color/yinbai"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:id="@+id/recret_setting"
            android:background="@color/beijing"
            android:paddingLeft="@dimen/guangchangimage_left"
            android:paddingRight="@dimen/guangchangimage_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="密保"
                    android:textSize="@dimen/biaotilan_xiaozi"
                    android:textColor="@color/ziti"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="密保作为找回密码的唯一凭证，请妥善修改并保存"
                    android:textSize="@dimen/biaotilan_chaoxiao"
                    android:textColor="@color/lightgray"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/img1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/right_grey"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>