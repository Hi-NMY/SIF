<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/helpRzong"
    tools:context=".SettingHelp">

    <fragment
        android:id="@+id/setting_help_bar"
        android:name="com.example.sif.Lei.ShowActivityBar.FragmentActivityBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/biaotilan_gaodu"/>

    <View
        android:id="@+id/v1"
        android:layout_below="@id/setting_help_bar"
        android:alpha="0.4"
        android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_below="@id/v1"
        android:orientation="vertical"
        android:background="@color/qianbai"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.ms.square.android.expandabletextview.ExpandableTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:id="@+id/expand_text_view"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:background="@color/beijing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            expandableTextView:maxCollapsedLines="1"
            expandableTextView:animDuration="200">
            <TextView
                android:id="@id/expandable_text"
                android:lineSpacingMultiplier="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/guangchangimage_left"
                android:layout_marginRight="@dimen/guangchangimage_left"
                android:textSize="@dimen/biaotilan_xiaozi"
                android:textColor="@color/gray" />
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right|top"
                android:background="@android:color/transparent"/>

        </com.ms.square.android.expandabletextview.ExpandableTextView>

        <View
            android:alpha="0.5"
            android:layout_marginLeft="@dimen/guangchangimage_left"
            android:layout_marginRight="@dimen/guangchangimage_left"
            android:background="@color/lightgray"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"/>

        <com.ms.square.android.expandabletextview.ExpandableTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
            android:layout_below="@id/expand_text_view"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:id="@+id/expand_text_view1"
            android:background="@color/beijing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            expandableTextView:maxCollapsedLines="1"
            expandableTextView:animDuration="200">
            <TextView
                android:id="@id/expandable_text"
                android:lineSpacingMultiplier="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/guangchangimage_left"
                android:layout_marginRight="@dimen/guangchangimage_left"
                android:textSize="@dimen/biaotilan_xiaozi"
                android:textColor="@color/gray" />
            <ImageButton
                android:id="@id/expand_collapse"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-30dp"
                android:layout_gravity="right|top"
                android:background="@android:color/transparent"/>

        </com.ms.square.android.expandabletextview.ExpandableTextView>


    </LinearLayout>

</RelativeLayout>