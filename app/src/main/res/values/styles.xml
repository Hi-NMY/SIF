<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/beijing</item>
        <item name="colorPrimaryDark">@color/beijing</item>
        <item name="colorAccent">@color/gray</item>
</style>

    <style name="AlertDialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <!--该行代码就是设置AlertDialog的背景-->
        <item name="android:background">@drawable/alertdialog_background</item>
    </style>

    <style name="AlertDialog_Function" parent="@android:style/Theme.DeviceDefault.Dialog">
        <!--该行代码就是设置AlertDialog的背景-->
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/alertdialog_function_background</item>
    </style>

    <style name="AlertDialog_qr" parent="@android:style/Theme.DeviceDefault.Dialog">
        <!--该行代码就是设置AlertDialog的背景-->
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/alertdialog_function_background</item>
    </style>

    <style name="MyPopuoWindow">
        <item name="android:windowEnterAnimation">@anim/windowin</item>
        <item name="android:windowExitAnimation">@anim/windowout</item>
    </style>

    <style name="verypopupview" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/verypop1</item>
        <item name="android:windowExitAnimation">@anim/verypop</item>
    </style>

    <style name="adddialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框 -->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item><!--半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/MyPopuoWindow</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

<style name="FruitActivityTheme" parent="AppTheme">

</style>

    <style name="picture.QQ.style" parent="Base.Theme.NoActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/beijing</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/beijing</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/zuo_black</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/picture_icon_arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/picture_icon_arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/ziti</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/weilan</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/checkbox_num_selector</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">true</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/beijing</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/ziti</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/ziti</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/num_oval_blue</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/ziti</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/ziti</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/beijing</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/beijing</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/zuo_black</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/beijing</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/beijing</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/ziti</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/picture_orange_oval</item>
    </style>

</resources>
